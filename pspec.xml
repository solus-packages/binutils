        <Summary> The Binutils package contains a linker, an assembler, and other tools for handling object files. </Summary>
        <Description>The Binutils package contains a linker, an assembler, and other tools for handling object files. </Description>
        <License>GPL-3.0</License>
        <Archive sha1sum="4a70c4b8da5e908ee0b0f31efbfe9c746104d355" type="targz">https://ftp.gnu.org/gnu/binutils/binutils-2.28.tar.gz</Archive>

        <Patches>
            <Patch level="1">ld-as-needed.patch</Patch>
        </Patches>
    </Source>

    <Package>
        <Name>binutils</Name>
        <Files>
            <Path fileType="executable">/usr/bin</Path>
            <Path fileType="header">/usr/include</Path>
            <Path fileType="library">/usr/lib/ldscripts</Path>
            <Path fileType="library">/usr/lib/*.a</Path>
            <Path fileType="info">/usr/share/info</Path>
            <Path fileType="localedata">/usr/share/locale</Path>
            <Path fileType="man">/usr/share/man</Path>
        </Files>
        <RuntimeDependencies>
            <Dependency release="current">binutils-libs</Dependency>
        </RuntimeDependencies>
    </Package>

    <Package>
        <Name>binutils-gold</Name>
        <PartOf>programming.tools</PartOf>
        <Summary>Gold linker</Summary>
        <Description>Gold linker</Description>
        <Files>
            <Path fileType="library">/usr/bin/ld.gold</Path>
        </Files>
        <RuntimeDependencies>
                <Dependency release="current">binutils-libs</Dependency>
        </RuntimeDependencies>
    </Package>

    <Package>
        <Name>binutils-libs</Name>
        <PartOf>programming.library</PartOf>
        <Summary>Runtime libraries for binutils</Summary>
        <Description>Runtime libraries for binutils</Description>
        <Files>
            <Path fileType="library">/usr/lib64/*.so*</Path>
        </Files>
    </Package>

